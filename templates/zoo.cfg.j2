tickTime={{ zk_tick_time }}
dataDir={{ zk_data_dir }}
dataLogDir={{ zk_log_dir }}
clientPort={{ zk_client_port }}
initLimit={{ zk_init_limit }}
syncLimit={{ zk_sync_limit }}

{% if zk_autopurge_purgeInterval > 0 %}
autopurge.purgeInterval={{ zk_autopurge_purgeInterval }}
autopurge.snapRetainCount={{ zk_autopurge_snapRetainCount }}
{% endif %}

{%- set ips = [] %}
{%- for host in groups[zk_inventory_group] %}
{{- ips.append(dict(id=loop.index, host=host, ip=hostvars[host]['ansible_default_ipv4'].address)) }}
{%- endfor %}

{% set current_version = zk_version.split('.') %}
{% set dynamic_reconfig_version = zk_version_dynamic_reconfig.split('.') %}
{% set with_dynamic_reconfig = false %}

{% if current_version[0] = dynamic_reconfig_version[0] and current_version[1] >=  dynamic_reconfig_version[1]%}
{% set with_dynamic_reconfig = true %}
{% endif %}
{% if current_version[0] > dynamic_reconfig_version[0] %}
{% set with_dynamic_reconfig = true %}
{% endif %}

{% if with_dynamic_reconfig is sameas true %}
{% for server in ips %}
{% if server.host is defined %}
{% if server.ip is defined %}
server.{{server.id}}={{server.ip}}:2888:3888;{{zk_client_port}}
{% else %}
server.{{server.id}}={{server.host}}:2888:3888;{{zk_client_port}}
{% endif %}
{% else %}
server.{{loop.index}}={{server}}:2888:3888;{{zk_client_port}}
{% endif %}
{% endfor %}
{% else %}
{% for server in ips %}
{% if server.host is defined %}
{% if server.ip is defined %}
server.{{server.id}}={{server.ip}}:2888:3888
{% else %}
server.{{server.id}}={{server.host}}:2888:3888
{% endif %}
{% else %}
server.{{loop.index}}={{server}}:2888:3888
{% endif %}
{% endfor %}
{% endif %}